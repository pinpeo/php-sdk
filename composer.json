{
  "name": "pinpeo/php-sdk",
  "type": "library",
  "description": "PHP SDK for pinpeo API",
  "keywords": ["pagos internet","payment gateway","pinpeo","dynamicore"],
  "homepage": "https://github.com/pinpeo/php-sdk",
  "version": "3.0.1",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "DynamiCore",
      "email": "support@dynamicore.io"
    }
  ],
  "require": {
    "php": ">=5.6",
    "rmccue/requests": "^1.7"
  },
  "require-dev":{
    "phpunit/phpunit": ">=4.8",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "PinpeoSdk\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Tests\\": "tests"
    }
  },
  "scripts" : {
    "test": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
  }
}
